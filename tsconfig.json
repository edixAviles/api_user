{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": [
      "es6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "skipLibCheck": true
}